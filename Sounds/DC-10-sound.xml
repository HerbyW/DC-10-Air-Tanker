<!-- McDonnell Douglas DC-10 -->
<!-- External sound configuration -->

<PropertyList>

    <fx>
        <!-- Engine 1 sound -->
        <engine>
            <name>Engine 1 sound 1 external</name>
            <path>Aircraft/DC-10-Air-Tanker/Sounds/whine.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine/n1</property>
              <factor>0.085</factor>
              <min>0.5</min>
              <max>1.0</max>
            </volume>
            <pitch>
                <property>engines/engine/rpm</property>
                <offset>0.01</offset>
                <factor>0.02</factor>
            </pitch>
            <orientation>
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>160</inner-angle>
                <outer-angle>220</outer-angle>
                <outer-gain>0.3</outer-gain>
         </orientation>
        </engine>

        <engine>
            <name>Engine 1 sound 2 external</name>
            <path>Aircraft/DC-10-Air-Tanker/Sounds/jet.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
         		<property>/engines/engine/thrust-lbs</property>
         		<factor>0.0000074451</factor>
           </volume>
           <pitch>
             <property>/engines/engine/n1</property>
             <factor>1.0</factor>
             <offset>0.0</offset>
           </pitch>
          <orientation>
                <x>1</x>
                <y>0</y>
                <z>1</z>
                <inner-angle>160</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.5</outer-gain>
         </orientation>
            </engine>
        
        <engine>
            <name>Engine 1 sound 3 external</name>
            <path>Aircraft/DC-10-Air-Tanker/Sounds/vibe.wav</path>
            <mode>looped</mode>
        <condition>
          <and>
            <not>
        <property>sim/current-view/internal</property>
            </not>
        <greater-than>
          <property>/engines/engine/rpm</property>
            <value>100</value>
        </greater-than>
            </and>
        </condition>
            <volume>
         		<property>/engines/engine/rpm</property>
         		<factor>0.003511</factor>
           </volume>
          <orientation>
                <x>0</x>
                <y>1</y>
                <z>0</z>
                <inner-angle>75</inner-angle>
                <outer-angle>90</outer-angle>
                <outer-gain>0.5</outer-gain>
         </orientation>
            </engine>

          <engine>
            <name>Engine 1 sound 4 external</name>
            <path>Aircraft/DC-10-Air-Tanker/Sounds/fan.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <not>
                        <property>sim/current-view/internal</property>
                    </not>
                    <greater-than>
                        <property>engines/engine/rpm</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
              <property>/engines/engine/n1</property>
              <factor>0.010</factor>
              <max>0.40</max>
           </volume>
           <pitch>
             <property>/engines/engine/n1</property>
             <factor>0.03</factor>
             <offset>0.1</offset>
           </pitch>
          <orientation>
                <x>1</x>
                <y>0</y>
                <z>0</z>
                <inner-angle>160</inner-angle>
                <outer-angle>210</outer-angle>
                <outer-gain>0.1</outer-gain>
        </orientation>
        </engine>

        <engine>
            <name>Engine 1 reverse thrust</name>
            <path>Sounds/exhaust_loop.wav</path>
            <mode>looped</mode>
            <condition>
                <and>
                    <greater-than>
                        <property>engines/engine/rpm</property>
                        <value>0</value>
                    </greater-than>
                    <greater-than>
                        <property>engines/engine/reverser-pos-norm</property>
